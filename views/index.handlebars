<div class="container-flexbox">
    <div class="row">
        <div class="col-md-12">
            <h1>EAT DA BURGER</h1>
            <br><br>
        </div>
    </div>
    <div class="row justify-content-center>">
        <div class="col-md-4">
            <h2>Burgers that have been devoured</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4">
            <img src="https://library.kissclipart.com/20181124/yqe/kissclipart-hamburguer-vetor-png-clipart-hamburger-cheeseburge-9566ca851106effd.png"
                width="300" height="300" alt="picture">
        </div>

        <div class="col-md-4">
            <h2>Burgers that are ready to eat</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
</div>